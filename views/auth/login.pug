extends ../layouts/common.pug

block content
	.container.pt-5
		h1 Login

		if errors
			each error in errors
				.alert.alert-danger= error

		form(action="/auth/login", method="POST")
			.form-group
				label(class="mb-2", for="email") Email
				input#email(type="text", name="email", class="form-control mb-2", value=values ? values.email : "")
			.form-group
				label(class="mb-2", for="password") Password
				input#password(type="password", name="password", class="form-control mb-2", value=values ? values.password : "")

			button(class="btn btn-danger") Login